@model BusinessAnalytic.Models.Entities.Customer

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card bg-light section Form">
    <div class="card-header">
        <h1>Customer Details</h1>
    </div>

    <div>
        <div class="p-lg-5">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.AccountNumber)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.AccountNumber)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Rowguid)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Rowguid)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ModifiedDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ModifiedDate)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Person)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Person.FirstName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Store)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Store.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Territory)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Territory.CountryRegionCode)
                </dd>
            </dl>
            <div>
                <a class="btn bg-primary text-white" style="float: left; width: 300px;" asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>

</div>
