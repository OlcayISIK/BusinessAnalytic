@using X.PagedList;
@using X.PagedList.Mvc.Core;
@model IPagedList<BusinessAnalytic.Models.Entities.Customer>

@{
    ViewData["Title"] = "Index";
}

<div class="card bg-light p-lg-5 section">


    <h1>Customer List</h1>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.First().ModifiedDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().Person)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().Store)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().Territory)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ModifiedDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Person.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Store.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Territory.CountryRegionCode)
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.CustomerId">Detail</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))

</div>