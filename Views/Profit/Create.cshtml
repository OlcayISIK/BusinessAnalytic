@model BusinessAnalytic.Models.Entities.ProductVendor

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card bg-light section Form">

    <div class="card-header">
        <h1>Product Vendor Create</h1>
    </div>
    <div class="p-lg-5">
        <div class="row">
            <div class="col-md-12">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="ProductId" class="control-label"></label>
                        <select asp-for="ProductId" class="form-control" asp-items="ViewBag.ProductId"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="BusinessEntityId" class="control-label"></label>
                        <select asp-for="BusinessEntityId" class="form-control" asp-items="ViewBag.BusinessEntityId"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="AverageLeadTime" class="control-label"></label>
                        <input asp-for="AverageLeadTime" class="form-control" />
                        <span asp-validation-for="AverageLeadTime" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="StandardPrice" class="control-label"></label>
                        <input asp-for="StandardPrice" class="form-control" />
                        <span asp-validation-for="StandardPrice" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LastReceiptCost" class="control-label"></label>
                        <input asp-for="LastReceiptCost" class="form-control" />
                        <span asp-validation-for="LastReceiptCost" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LastReceiptDate" class="control-label"></label>
                        <input asp-for="LastReceiptDate" class="form-control" />
                        <span asp-validation-for="LastReceiptDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MinOrderQty" class="control-label"></label>
                        <input asp-for="MinOrderQty" class="form-control" />
                        <span asp-validation-for="MinOrderQty" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MaxOrderQty" class="control-label"></label>
                        <input asp-for="MaxOrderQty" class="form-control" />
                        <span asp-validation-for="MaxOrderQty" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="OnOrderQty" class="control-label"></label>
                        <input asp-for="OnOrderQty" class="form-control" />
                        <span asp-validation-for="OnOrderQty" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UnitMeasureCode" class="control-label"></label>
                        <select asp-for="UnitMeasureCode" class="form-control" asp-items="ViewBag.UnitMeasureCode"></select>
                    </div>
                    <div class="form-group">
                        <a class="btn bg-primary text-white" style="float: left; width: 300px;" asp-action="Index">Back to List</a>
                        <input style="float:right; width:300px;" type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
