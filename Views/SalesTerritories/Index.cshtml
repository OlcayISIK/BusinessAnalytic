@using X.PagedList;
@using X.PagedList.Mvc.Core;
@model IPagedList<BusinessAnalytic.Models.Entities.SalesTerritory>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card bg-light p-lg-5 section">


    <h1>Sales Territories</h1>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.First().Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().Group)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().SalesYtd)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().SalesLastYear)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().CostYtd)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().CostLastYear)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().ModifiedDate)
                </th>
                <th> </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Group)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SalesYtd)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SalesLastYear)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CostYtd)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CostLastYear)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModifiedDate)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.TerritoryId">Details</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
    @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))
</div>